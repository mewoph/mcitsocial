<div id="interviewtips" class="modal-popup mfp-hide">
	<%= render "interviewtips" %>
	<%= link_to '<i class="fa fa-pencil-square-o"></i> Add a Protip'.html_safe, new_protip_path(:category => 1) %>
</div>

<div id="penntips" class="modal-popup mfp-hide">
	<%= render "penntips" %>
	<%= link_to '<i class="fa fa-pencil-square-o"></i> Add a Protip'.html_safe, new_protip_path(:category => 2) %>
</div>

<div id="phillytips" class="modal-popup mfp-hide">
	<%= render "phillytips" %>

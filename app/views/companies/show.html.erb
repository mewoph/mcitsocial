<div class="company-show">

	<div class="header-wrapper">

	<h1><%= @company.name %></h1>
		<a><i class="fa fa-pencil-square-o"></i> <br><%= link_to "Add Feedback", new_feedback_path(:company_id => @company.id) %></br>
</a>
	</div>

	<div class="span6" id="questions">
		<h3>Questions</h3>
		<ul class="questions-list">
			<% @questions.each do |q| %>
				<li><%= q.feedback_content %>
					<div class="adder-name">
						<i class="fa fa-user"></i>  Posted by <%= q.adder_name %>
					</div>
				</li>
			<% end %>
		</ul>
	</div>

	<div class="span6" id="comments">
		<h3>Comments</h3>
		<ul class="comments-list">
			<% @comments.each do |c| %>
				<li><%= c.feedback_content %>
				<div class="adder-name">
						<i class="fa fa-user"></i>  Posted by <%= c.adder_name %>
					</div>
				</li>
			<% end %>
		</ul>
	</div>


</div>

<script>
	$('body').addClass('company-show-bg');

	if (location.hash) {
		var section = location.hash;
		$(section).css("background-color", "rgba(0,0,0,0.2)");
	}

</script>

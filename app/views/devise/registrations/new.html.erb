<div class="signup">

	<span class="container">

	<h1>mcit social</h1>

	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>

	  <div>
	  	<%= f.email_field :email, :autofocus => true, :placeholder => 'EMAIL' %></div>

	  <div>
	  	<%= f.password_field :password, :placeholder => 'PASSWORD' %></div>

	  <div>
	  	<%= f.password_field :password_confirmation, :placeholder => 'CONFIRM PASSWORD' %></div>

	  <div><%= f.submit "SIGN UP", :class => 'button' %></div>
	<% end %>

</div>

<%= javascript_include_tag "landing_scripts" %>

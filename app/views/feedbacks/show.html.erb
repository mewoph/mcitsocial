<div class="question-show">

	<div class="question-header">
		<h1><%= @feedback.feedback_content %></h1>

		<div class="company-name" onclick="location.href='<%= company_path(@feedback.company_id) %>';">
			<%= @feedback.get_company_name(@feedback.company_id) %>
		</div>

		<div class="adder-name">
			<i class="fa fa-user"></i> Posted by <div class="user-name" onclick="location.href='<%= company_path(@feedback.company_id) %>';"><%= @feedback.adder_name %></div> on <%= @feedback.get_created_time %>
		</div>
	</div>
	<div class="main-body"> 

		<% @feedback_comments.each do |comment| %>
			<h3><%= comment.comment%></h3>
			<h5><%= User.find(comment.commenter_id).full_name %</h5>

			<% @feedback.get_sub_comments(comment.id).each do |sub_comment| %>
				<h4><%= sub_comment.comment%></h4>
				<h5><%= User.find(sub_comment.commenter_id).full_name %</h5>
			<% end %>
		
			<%= form_tag(feedback_path(@feedback.id), :method => "get", class: "navbar-form") do %>
				  <div class="input-append">
				    <%= text_field_tag :comment_response, params[:comment_response], class: "span12", placeholder: "Type your response here..." %> 
				    <%= hidden_field_tag :responding_to_id, comment.id %>
				    <button class="btn" type="submit"><i class="icon-search"></i></button>
				  </div>
				  <% end %>
		<% end %>

		<%= form_tag(feedback_path(@feedback.id), :method => "get", class: "navbar-form") do %>
				  <div class="input-append">
				    <%= text_field_tag :comment, params[:comment], class: "span12", placeholder: "Type your answer here..." %>				    <button class="btn" type="submit"><i class="icon-search"></i></button>
				  </div>
		<% end %>
	</div>
					
</div>

<script>
	$('body').addClass('question-show-bg');
</script>
